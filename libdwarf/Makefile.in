	rm -f ALL
	rm -f dwarf_loc2.c
	rm -f gennames 
	rm -f dwarfleb 
	rm -f dwarf_names_enum.h dwarf_names_new.h dwarf_names.c dwarf_names.h
	rm -f ./dwarftied
	rm -f ./errmsg_check
	rm -f ./errmsg_check_list
	rm -f *~


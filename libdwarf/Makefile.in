INSTALL_DATA =	@INSTALL_DATA@
SHELL =		/bin/sh
CC =		@CC@
CC_FOR_BUILD =	@CC_FOR_BUILD@
AR =		@AR@
# For use with BSD ar (MacOSX ar) edit the ARFLAGS to be -s
#ARFLAGS =	@ARFLAGS@
RM =		rm
RANLIB =	@RANLIB@
DEFS =		@DEFS@
LIBS =		@LIBS@
INCLUDES =	-I. -I$(srcdir)
dwfpic =        @dwfpic@
dwfwall =       @dwfwall@
dwfsanitize =   @dwfsanitize@
